 <h2>User info</h2>
   <%= form_with model:@user, local:true do |f| %>
   <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
    <table>

    <tr><th><label for="inputName">Name</label></th><td>
   <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"name"%></td></tr>

   <tr><th><label for="inputIntroduction">introduction</label></th><td>
   <%= f.text_field :introduction, autofocus: true, id:"inputIntroduction", placeholder:""%></td></tr>

</table>

  <%= link_to "edit", edit_user_path(@user.id) %>
<% end %>

<h2>New book</h>
<%= form_with model: @book, local: true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_field :body %>
  <br><%= f.submit 'Create Book' %></br>
<% end %>

<h2>Books</h2>

<table>
<thead>
<tr>
<th>image</th>
<th>name</th>
<th></th>
</tr>
</thead>

<tbody>
<% @users.each do |user| %>
<tr>
<td>
<%=link_to  root_path do %>
<%= attachment_image_tag user, :profile_image,  :fill, 100, 100 %>
<% end %>
</td>
<td>
<%= user.name %>
</td>
<td>
<%= link_to "show", user_path(user.id) %>
</td>
</tr>
<% end %>
</tbody>

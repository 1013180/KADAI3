 <h2>User info</h2>
   <%= form_with model:@user, local:true do |f| %>

 <%= attachment_image_tag @user, :profile_image %>
  <label for="inputImage"></label>
  <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
  <%= f.submit "変更を保存" %>
<% end %>

<h1>New book</h1>
<%= form_with URLmodel: @book, local: true do |f| %>
  <h4>User info</h4>
  <!--<= f.attachment_field :image %>-->
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_field :body %>
  <%= f.submit 'Create Book' %>
<% end %>

<% @books.each do |book| %>
<div>
  <%= link_to user_path(book.id) do %>
    <%= attachment_image_tag @user, :profile_image %>
  <% end %>
  <!--<p>投稿ユーザー画像：<= image_tag('') %></p>-->
  <table>
<thead>
<tr>
 <th>Title：<%= book.title %></th>
  <th>Opinion：<%= book.body %></th>
  </tr>
</thead>
 </table>
  <!--<p>ユーザーネーム：<= book.user.name %></p>-->
</div>
<% end %>


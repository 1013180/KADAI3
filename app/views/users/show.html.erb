 <h2>User info</h2>
   <%= form_with model:@user, local:true do |f| %>

 <%= attachment_image_tag @user, :profile_image %>
  <label for="inputImage"></label>
  <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
  <%= f.submit "変更を保存" %>
<% end %>

<h1>New book</h1>
<%= form_with model: @book,url: books_path, local: true do |f| %>
  <h4>User info</h4>
  <!--<= f.attachment_field :image %>-->
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_field :body %>
  <%= f.submit 'Create Book' %>
<% end %>


<div>
  <%= link_to user_path(@user.id) do %>
    <%= attachment_image_tag @user, :profile_image %>
  <% end %>
  <!--<p>投稿ユーザー画像：<= image_tag('') %></p>-->
<h2>Books</h2>
  <table>
<thead>
<tr>
<th>title</th>
<th>body</th>
<th></th>
</tr>
</thead>

<tbody>
<% @books.each do |book| %>
<tr>
<td>
<%= link_to book.title, book_path(book.id) %>
</td>
<td>
<%= book.body %>
</td>


</tr>
<% end %>
</tbody>
</table>
</div>


 <h2>User info</h2>

   <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
    <table>

    <tr><th><label for="inputName">Name</label></th><td>
    <%= @user.name %>

   <tr><th><label for="inputIntroduction">introduction</label></th><td>
   <%= @user.introduction %>

</table>

  <%=link_to "edit", edit_user_path(@user.id) %>

<h2>New book</h>
<%= form_with model: @book, local: true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_field :body %>
  <%= f.submit 'Create Book' %>
<% end %>

<h2>Books</h2>

<table>
<thead>
<tr>
<th></th>
<th>title</th>
<th>Opinion</th>
<th></th>
</tr>
</thead>

<tbody>
<% @books.each do |book| %>
<tr>
<td>
<%=link_to book_path(book.id) do %>
<%= attachment_image_tag @user, :profile_image, :fill, 100, 100 %>
<% end %>
</td>
<td>
<%= link_to edit_book_path(book.id) do %>
<%= book.title %>
<% end %>
</td>
<td>
<%= book.body %>
</td>



<% end %>
</tr>
</tbody>
</table>
</div>